    <div class="container">
      <div class="row">
        <div class="col-md-6 col-10 bg-white mx-auto mt-5 pt-3 pb-2 px-0" >
          <h1 class="mb-4" >Crear Ruta</h1>
          <form action="#" method="post">
            <div class="col-md-12" >
              <div class="form-group mt-2">
                <!-- TITULO de la Ruta-->
                <label>Título</label>
                <input name="titulo" class="form-control" placeholder="Título de la ruta">
              </div>
                <div class="form-group">
                  <!-- DESC de la Ruta-->
                  <label>Descripción</label><textarea name="descripcion" class="form-control mt-2" id="form35" rows="3" placeholder="Descripción de la ruta"></textarea>
                </div>
                <div class="form-group">
                  <!-- LUGARES de la Ruta-->
                  <label>Lugares de la ruta: </label>
                  <select name="lugares" multiple> 
                    <%         ref.on("value", function (snapshot) { %>
                      <% snapshot.forEach(function (data) { %>
                        
                        <option name="lugares[<%= data.key %>]" value="<%= data.key %>"> <%= data.key%> </option>
                        
                      <% }); %>
                    <% }); %>
                  </select>
                  <a class="btn navbar-btn text-white mx-2 btn-primary" href="/crearLugar">Crear Lugar</a>
                    </div>
                    <div class="form-group">
                      <!-- Grupos -->
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="grupos[vista]" id="form21" value="true"> <label class="form-check-label" for="form21">Accesible para problemas de vision</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="grupos[oido]" id="form21" value="true"> <label class="form-check-label" for="form21">Accesible para problemas de audición</label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="grupos[movilidad]" id="form21" value="true"> <label class="form-check-label" for="form21">Accesible para problemas de movilidad</label>
                      </div>
                    </div>
                    <div class="form-group mt-2">
                      <div class="row">
                        <div class="col-md-6" >
                          <!-- URL MAPA ANDROID -->
                          <div class="form-group">
                            <input name="mapaAndroid" class="form-control w-100" placeholder="URL de la ruta android">
                          </div>
                        </div>
                      </div> 
                    </div>
                    <div class="form-group mt-2">
                      <div class="row">
                        <div class="col-md-6" >
                          <!-- MAPA WEB -->
                          <div class="form-group">
                            <input name="mapaWEB" class="form-control w-100" placeholder="URL de la ruta web">
                          </div>
                        </div>
                        <div class="col-md-6" >
                          <button type="button" onClick="parent.open('https://www.google.com/maps/d/edit?mid=1nO98MJ7QrH_tyx26Z95Fn7SjuLhpfBzL&ll=34.36061899272663%2C-6.926807499999995&z=5')" class="btn btn-primary">Generar Ruta </button>
                        </div>
                      </div> 
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
